//Fazer um programa para ler um número inteiro, e depois dizer se este número é negativo ou não.

import java.util.Locale;
import java.util.Scanner;

public class EntradaDeDados {
public static void main(String[] args) {

Locale.setDefault(Locale.US);
Scanner sc = new Scanner(System.in);

System.out.println("Digite um numero inteiro para ser verificado se é negativo ou não");
int numero = sc.nextInt();

if (numero < 0) {
System.out.printf("O numero %d e negativo!", numero);}
else if (numero == 0) {
System.out.printf("O numero %d e neutro!", numero);}
else {
System.out.printf("O numero %d e positivo!", numero);}

sc.close();

}
}
